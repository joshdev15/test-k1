{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES5",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "classic",
    "stripInternal": true,
    "outDir": "dist",
    "allowJs": false,
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"]
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "dist"],
  "include": ["test/**/*.spec.ts", "src/**/*.ts", "e2e/**/*.ts"]
}
