{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES3",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "outDir": "dist",
    "allowJs": false,
    "lib": ["es5", "dom"],
    "typeRoots": ["node_modules/@types"]
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "dist"],
  "include": ["test/**/*.spec.ts", "src/**/*.ts", "e2e/**/*.ts"]
}
